<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:im="clr-namespace:InstantMessage;assembly=BaseProtocolLibrary"
	xmlns:c="clr-namespace:NexusIM.Converters"
	mc:Ignorable="d"
	x:Class="NexusIM.Controls.ContactListItem"
	x:Name="UserControl"
	d:DesignWidth="200" Height="20" UseLayoutRounding="True" x:FieldModifier="private" x:ClassModifier="internal">
	<UserControl.Resources>
		<c:IMBuddyStatusToSmallIconConverter x:Key="StatusConverter" />
	</UserControl.Resources>
	<UserControl.DataContext>
		<im:IMBuddy Username="Test Username" Status="Available" />
	</UserControl.DataContext>
	<Grid x:Name="LayoutRoot">
		<Image Source="{Binding Status, Converter={StaticResource StatusConverter}}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="16" Width="16" Margin="4,0,0,0" />
		<TextBlock Text="{Binding Username}" Margin="21,0,0,0" VerticalAlignment="Center" />
	</Grid>
</UserControl>