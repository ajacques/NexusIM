<UserControl x:Name="UserControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	xmlns:im="clr-namespace:InstantMessage;assembly=BaseProtocolLibrary"
	xmlns:nx="clr-namespace:NexusIM.Converters" 
	xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
	x:Class="NexusIM.Controls.SetupAccountItem"	
	Height="60" d:DesignWidth="400" UseLayoutRounding="True">
	<UserControl.Resources>
		<nx:IntToBoolConverter x:Key="IntToBoolConverter"/>
		<Storyboard x:Key="EditFadeIn">
			<DoubleAnimation Storyboard.TargetName="UsernameBox" Storyboard.TargetProperty="(FrameworkElement.Opacity)" Duration="0:0:0.2" To="1" />
			<DoubleAnimation Storyboard.TargetName="PasswordBox" Storyboard.TargetProperty="(FrameworkElement.Opacity)" Duration="0:0:0.2" To="1" />
		</Storyboard>
	</UserControl.Resources>
	<UserControl.DataContext>
		<im:IMProtocol Enabled="true" Username="Test Username" Password="Test" />
	</UserControl.DataContext>
	<Grid x:Name="LayoutRoot">
		<Border BorderBrush="#FF686868" BorderThickness="1" CornerRadius="5" IsHitTestVisible="False" />
		<Image HorizontalAlignment="Left" VerticalAlignment="Center" Margin="33,0,0,0" Source="/NexusIMWPF;component/Resources/yahoo.png" Stretch="Fill" Width="26" Height="18" />
		<CheckBox HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" IsChecked="{Binding Enabled, Mode=TwoWay}" />
		<TextBlock HorizontalAlignment="Left" Margin="64,8,0,0" TextWrapping="Wrap" Text="{Binding Username, Mode=OneWay}" VerticalAlignment="Top" />
		<TextBox x:Name="UsernameBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,5,0,0" Text="{Binding Username}" Opacity="0" Width="130" CaretBrush="Black" IsHitTestVisible="False" />
		<PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="70,0,0,8" VerticalAlignment="Bottom" Opacity="0" Width="130" IsHitTestVisible="False" />
	</Grid>
</UserControl>