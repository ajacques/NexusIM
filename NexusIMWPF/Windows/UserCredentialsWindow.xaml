<Window x:Class="NexusIM.Windows.UserCredentialsWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Sign in" Height="200" Width="200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Grid>
		<Grid Margin="0,60,0,0">
			<TextBox x:Name="Username" Height="23" Width="150" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" />
			<PasswordBox x:Name="Password" Height="23" Width="150" Margin="0,50,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" />
		</Grid>
	</Grid>
</Window>
