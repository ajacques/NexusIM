<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:nxc="clr-namespace:NexusIM.Controls"
	xmlns:mgr="clr-namespace:NexusIM.Managers"
	xmlns:im="clr-namespace:InstantMessage;assembly=BaseProtocolLibrary"
	xmlns:converters="clr-namespace:NexusIM.Converters"
	x:Class="NexusIM.Windows.ContactListWindow"
	Title="NexusIM - Contact List" Height="700" Width="300" WindowStyle="SingleBorderWindow" Loaded="Window_Loaded" ResizeMode="CanMinimize" HorizontalAlignment="Right" UseLayoutRounding="True"
	Icon="/NexusIMWPF;component/Resources/nexusim.ico">
	<Window.Resources>
		<converters:StatusConverter x:Key="StatusConverter"/>
	</Window.Resources>
	<Grid>
		<ComboBox x:Name="StatusComboBox" Height="23" VerticalAlignment="Top" Margin="35,25,0,0" HorizontalAlignment="Left" Width="100" SelectedIndex="0">
			<Grid>
				<Image Source="/NexusIMWPF;component/Resources/available_icon.ico" Width="16" Height="16" HorizontalAlignment="Left" />
				<ListBoxItem Content="Available" Margin="18,0,0,0" />
			</Grid>
			<Grid>
				<Image Source="/NexusIMWPF;component/Resources/away_icon.ico" Width="16" Height="16" HorizontalAlignment="Left" />
				<ListBoxItem Content="Away" Margin="18,0,0,0"/>
			</Grid>
			<Grid>
				<Image Source="/NexusIMWPF;component/Resources/busy_icon.ico" Width="16" Height="16" HorizontalAlignment="Left" />
				<ListBoxItem Content="Busy" Margin="18,0,0,0"/>
			</Grid>			
			<Grid>
				<Image Source="/NexusIMWPF;component/Resources/invisible_icon.ico" Width="16" Height="16" HorizontalAlignment="Left" />
				<ListBoxItem Content="Invisible" Margin="18,0,0,0"/>
			</Grid>
		</ComboBox>
		<ScrollViewer Margin="0,57,0,0" VerticalScrollBarVisibility="Auto">			
			<StackPanel x:Name="ContactListControl">
				<nxc:ContactListGroup>
					<nxc:ContactListGroup.Contacts>
						<nxc:ContactListItem />
					</nxc:ContactListGroup.Contacts>
				</nxc:ContactListGroup>
				<nxc:ContactListItem MouseDoubleClick="ContactListItem_MouseDoubleClick">
					<nxc:ContactListItem.DataContext>
						<im:IMBuddy Status="Available" StatusMessage="YEAH" Username="Penguin" />
					</nxc:ContactListItem.DataContext>
				</nxc:ContactListItem>
			</StackPanel>
		</ScrollViewer>
		<Menu VerticalAlignment="Top">
			<Menu.Background>
				<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
					<GradientStop Color="#FFF6F6F6" Offset="0.25"/>
					<GradientStop Color="#FFDCD9D9" Offset="0.8"/>
					<GradientStop Color="White" Offset="1"/>
				</LinearGradientBrush>
			</Menu.Background>
			<MenuItem Header="View">
				<MenuItem Header="Always Ontop" IsCheckable="True" />
			</MenuItem>
			<MenuItem Header="Accounts">
				<MenuItem Click="EditAccounts_Click" Header="Edit Accounts" />
				<MenuItem Header="New Contact Group" IsEnabled="False" />
			</MenuItem>
			<MenuItem Header="Contacts">
				<MenuItem Header="Add Contact" />
				<MenuItem Header="Manage Groups" />
				<MenuItem Header="Compact View" IsCheckable="True" />
			</MenuItem>
		</Menu>
	</Grid>
</Window>