<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="NexusIM.Windows.AddContactWindow"
	x:Name="Window"
	Title="Add Contact" UseLayoutRounding="True"
	Width="400" Height="280" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/NexusIMWPF;component/Resources/group_add.png">
	<Grid x:Name="LayoutRoot">
		<Rectangle Height="44" VerticalAlignment="Top" >
			<Rectangle.Fill>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FFCBE3FF" Offset="1"/>
					<GradientStop/>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
		<TextBlock HorizontalAlignment="Left" Margin="18,17,0,0" TextWrapping="Wrap" Text="Add Contact" VerticalAlignment="Top" FontSize="23" />
		<Expander Header="Intro Message" HorizontalAlignment="Left" Margin="8,0,0,8" VerticalAlignment="Bottom" />
		<Button Content="Send Request" HorizontalAlignment="Right" Margin="0,0,8,8" VerticalAlignment="Bottom" FontSize="10.667" />
		<ComboBox Margin="57,100,0,0" VerticalAlignment="Top" SelectedIndex="0" HorizontalAlignment="Left" Width="208" />
	</Grid>
</Window>