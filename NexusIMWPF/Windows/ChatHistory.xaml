<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:nxc="clr-namespace:NexusIM.Controls"
	mc:Ignorable="d" x:Class="NexusIM.Windows.ChatHistory"
	Title="Chat History" Height="400" Width="500" UseLayoutRounding="True">
	<Grid>
		<DatePicker Margin="8,8,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
		<RichTextBox Margin="8,36,8,8" Focusable="False" UndoLimit="0">
			<FlowDocument>
				<Paragraph><Run Text="Upper Bound" /><nxc:ChatMessageInline Username="Test" MessageBody="Happy Birthday" /></Paragraph>
			</FlowDocument>
		</RichTextBox>
	</Grid>
</Window>