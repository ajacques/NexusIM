				<DropShadowEffect />
			</Path.Effect>
		</Path>
		<Image Source="74ceb595fabb83d33c2fc8c158014540f445e919.jpg" Height="26" OpacityMask="#CE000000" Name="ContactAvatar" Margin="0,16,0,13" />
