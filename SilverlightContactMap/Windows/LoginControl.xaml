<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="SilverlightContactMap.Controls.LoginControl"
	Width="200" Height="150" Background="Black">
	<Grid x:Name="LayoutRoot">
		<TextBox Margin="31,40,19,0" VerticalAlignment="Top" TextWrapping="Wrap" d:LayoutOverrides="HorizontalAlignment" ToolTipService.ToolTip="Enter your username here" />
		<PasswordBox Margin="31,0,19,45" VerticalAlignment="Bottom" ToolTipService.ToolTip="Enter your password here" />
		<TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Text="Sign-in" TextWrapping="Wrap" Foreground="White" Height="36" Width="137" FontSize="26.667" Margin="8,0,0,0" Opacity="0.6"/>
		<Button VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Login" Margin="0,0,0,10" />
	</Grid>
</UserControl>