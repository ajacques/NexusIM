<UserControl x:Class="SilverlightContactMap.Windows.ContactPlacard"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	Width="30" Height="55"
	Cursor="Hand" MouseLeftButtonUp="UserControl_MouseLeftButtonUp">
	<Grid x:Name="LayoutRoot">
		<TextBlock Canvas.Top="0" Foreground="White" Margin="-50, 0, -50, 0" TextAlignment="Center" Name="mDisplayName" Height="16" VerticalAlignment="Top">
			<TextBlock.Effect>
				<DropShadowEffect ShadowDepth="1" />
			</TextBlock.Effect>
		</TextBlock>
		<Path Data="M 0,15 l 30,0 0,30 -5,0 -10,5 -10,-5 -5,0 0,-30" Fill="#CE323585" Stretch="Fill" Margin="0,14.167,0,0" UseLayoutRounding="False" >
			<Path.Effect>
				<DropShadowEffect />
			</Path.Effect>
		</Path>
		<Image Source="../Resources/GenericAvatar.png" Height="26" OpacityMask="#CE000000" Name="ContactAvatar" Margin="0,16,0,13" />
	</Grid>
</UserControl>