<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="NexusPhone.UserInterface.LoginControl"
	Width="400" Height="300" x:FieldModifier="private">
	<Grid x:Name="LayoutRoot" Background="Transparent">
		<TextBox Text="Username" Height="70" Width="300" Margin="0,38,0,0" VerticalAlignment="Top" />
		<TextBox Text="Password" Height="70" Width="300" Margin="0,0,0,0" />
		<Button Content="Login" Width="150" Margin="0,0,0,24" VerticalAlignment="Bottom" d:LayoutOverrides="Width"/>
	</Grid>
</UserControl>